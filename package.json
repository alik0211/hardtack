{
  "name": "hardtack",
  "description": "An ultra-light (406 bytes) library for working with cookies in JavaScript",
  "version": "4.1.2",
  "main": "dist/hardtack.cjs.js",
  "module": "dist/hardtack.esm.js",
  "types": "src/hardtack.d.ts",
  "files": [
    "/dist",
    "/src"
  ],
  "license": "MIT",
  "keywords": [
    "cookie",
    "cookies",
    "js-cookie",
    "browser",
    "front-end"
  ],
  "size-limit": [
    {
      "path": "dist/hardtack.min.js",
      "limit": "406 B",
      "webpack": false
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alik0211/hardtack.git"
  },
  "bugs": "https://github.com/alik0211/hardtack/issues",
  "author": "Ali Gasymov <alik0211alik@gmail.com> (https://www.gasymov.com/)",
  "homepage": "https://github.com/alik0211/hardtack#readme",
  "scripts": {
    "test": "jest",
    "build": "rollup -c && size-limit",
    "prepublishOnly": "run-s build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.10",
    "cross-env": "^5.2.0",
    "husky": "^1.2.0",
    "jest": "26.6.3",
    "lint-staged": "^8.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.15.3",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-uglify": "^6.0.0",
    "size-limit": "^0.21.1"
  }
}
